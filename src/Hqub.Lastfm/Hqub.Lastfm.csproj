<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>Last.fm</PackageId>
    <Description>Implementation of the Last.fm API.</Description>
    <Product>Hqub.Lastfm</Product>
    <Company>h-qub.ru</Company>
    <Copyright>Copyright h-qub.ru © 2014-2019</Copyright>
    <Authors>Boris Glebov, Christian Woltering</Authors>
    <PackageProjectUrl>https://github.com/avatar29A/Last.fm</PackageProjectUrl>
    <RepositoryUrl>https://github.com/avatar29A/Last.fm</RepositoryUrl>
    <AssemblyVersion>2.0.0.0</AssemblyVersion>
    <FileVersion>2.0.0.0</FileVersion>
    <PackageTags>music lastfm last.fm scrobbler</PackageTags>
    <Version>2.0.0</Version>
    <AssemblyName>Hqub.Lastfm</AssemblyName>
    <RootNamespace>Hqub.Lastfm</RootNamespace>
    <Configurations>Debug;Release</Configurations>
    <PackageIconUrl>https://cdn4.iconfinder.com/data/icons/black-icon-social-media/128/0993-lastfm.png</PackageIconUrl>
    <PackageLicenseUrl>https://github.com/avatar29A/Last.fm/blob/master/LICENSE.txt</PackageLicenseUrl>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Runtime.Serialization" />
    <Reference Include="System.Xml" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Cache\" />
    <Folder Include="Services\" />
  </ItemGroup>

</Project>
